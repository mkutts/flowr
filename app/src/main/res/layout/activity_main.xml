<!-- activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add this EditText at the top of the layout for the search bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search strains..."
        android:padding="8dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="8dp" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView to display strains -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/strainsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <!-- Add Strain Button -->
    <Button
        android:id="@+id/addStrainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Strain"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <!-- Add this under the search bar in activity_main.xml -->

    <!-- Filter by Strain Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <CheckBox
            android:id="@+id/checkbox_indica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indica" />

        <CheckBox
            android:id="@+id/checkbox_sativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sativa" />

        <CheckBox
            android:id="@+id/checkbox_hybrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hybrid" />
    </LinearLayout>

    <!-- Filter by Effects -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <CheckBox
            android:id="@+id/checkbox_relaxed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relaxed" />

        <CheckBox
            android:id="@+id/checkbox_happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy" />

        <CheckBox
            android:id="@+id/checkbox_energetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energetic" />
    </LinearLayout>

</LinearLayout>
